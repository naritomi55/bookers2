<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <%= render 'users/user info', user: @book.user, book: @book_new %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= image_tag @book.user.get_profile_image(100,100) %>
                    <br>
                    <%= @book.user.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(@book.id) do %>
                    <%= @book.title %>
                  <% end %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <td>
                  <% if @book.user == current_user %>
                    <a class="btn btn-sm btn-success" href="/books/<%= @book.id %>/edit">Edit</a>
                  <% end %>
                </td>
                <td>
                  <% if @book.user == current_user %>
                    <a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger" rel="nofollow" data-method="delete" href="/books/<%= @book.id %>">Destroy</a>
                  <% end %>
                </td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>